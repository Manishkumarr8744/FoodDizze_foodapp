<% if(success && success.length){ %>
    <div  class="col-6 offset-3 mt-3 alert alert-success   d-inline-flex align-items-center justify-content-center gap-2" role="alert">
        <div style="display:flex; justify-content:center ; align-items:center; gap:1rem">
        <h3 style="padding: 0 !important;" class="alert-heading">Well done!</h2>
        
        <h3 style="display: inline;"  >
        <%= success %> <%= success.message %>   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </h2>
</div>
    </div>
    <% } %>

    <% if(error && error.length){ %>
        <div  class="col-6 offset-3 mt-3 alert alert-danger   d-inline-flex align-items-center justify-content-center gap-2" role="alert">
            <div style="display:flex; justify-content:center ; align-items:center; gap:1rem">
            <h3 style="padding: 0 !important;" class="alert-heading">Well done!</h2>
            
            <h3 style="display: inline;"  >
            <%= error %> <%= success.error %>   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </h2>
    </div>
        </div>
        <% } %>   
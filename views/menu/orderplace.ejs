<% layout("/layout/boilerplate.ejs") %>

<style>
    
    .main {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100vh;
    }
    
    .placeorder {
        background-color:#FCB454;
        
        padding: 20px 40px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    .placeorder h2 {
        margin: 0;
        font-size: 1.5em;
        color: #333;
        line-height: 1.4;
    }
    .continue-shopping {
        display: block;
        color: white;
        text-decoration: none;
        font-size: 1.1em;
    }
    .btn{
        margin-top: 10px;
        
    }
    .continue-shopping:hover {
        
        text-decoration: none;
    }
</style>


<div class="main">
    <div class="placeorder">
        <h2>Your order has been placed. You will get the conformation soon.</h2>
       <button class="btn btn-primary"> <a class="continue-shopping" href="/menu">Back to Menu</a></button>
    </div>
</div>
